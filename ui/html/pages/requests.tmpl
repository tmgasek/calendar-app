{{define "title"}}Requests{{end}}

{{define "main"}}
<div class="container">
    <h1>Requests</h1>
    {{range .Events}}
    <div>
        <h3>{{.Title}}</h3>
        <p>{{.Description}}</p>
        <p>Start: {{.StartTime}}</p>
        <p>End: {{.EndTime}}</p>
        <p>Location: {{.Location}}</p>
        <p>Status: {{.Status}}</p>
        <p>Requester: {{.Requester.Name}} ({{.Requester.Email}})</p>
        <form action="/request/{{.ID}}/update" method="POST">
            <input type="hidden" name="csrf_token" value="{{$.CSRFToken}}" />
            <button type="submit" name="action" value="confirmed">Accept</button>
            <button type="submit" name="action" value="declined">Decline</button>
        </form>
    </div>
    {{end}}
</div>
{{end}}
