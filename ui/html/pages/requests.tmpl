{{define "title"}}Requests{{end}}

{{define "main"}}
<div class="container">
  <h1>Requests</h1>
    {{range .Events}}
    <div>
        <h3>{{.Title}}</h3>
        <p>{{.Description}}</p>
        <p>Start: {{.StartTime}}</p>
        <p>End: {{.EndTime}}</p>
        <p>Location: {{.Location}}</p>
        <p>Status: {{.Status}}</p>
        <p>Requester: {{.Requester.Name}} ({{.Requester.Email}})</p>
        <a href="/request/{{.ID}}/accept">Accept</a> |
        <a href="/request/{{.ID}}/decline">Decline</a>
    </div>
    {{end}}
</div>
{{end}}
